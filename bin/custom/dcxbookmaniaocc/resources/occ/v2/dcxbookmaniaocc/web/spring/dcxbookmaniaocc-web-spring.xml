<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.dcx.bookmania.controllers"/>
    
    <!-- Product -->

	<bean id="dcxbookmaniaProductFieldMapper" parent="fieldMapper">
		<property name="sourceClass"
			value="de.hybris.platform.commercefacades.product.data.ProductData" />
		<property name="destClass"
			value="de.hybris.platform.commercewebservicescommons.dto.product.ProductWsDTO"/>
	</bean>
	<bean parent="fieldSetLevelMapping" id="customItemDataWSDTOFieldSetLevelMapping">
		<property name="dtoClass" value="de.hybris.platform.commercewebservicescommons.dto.product.ProductWsDTO"/>
		<property name="levelMapping">
			<map>
				<entry key="BASIC" value="isbn" />
				<entry key="DEFAULT" value="fonts" />
				<entry key="FULL" value="author" />
			</map>
		</property>
	</bean>

</beans>
